{
  "name": "hundun-ui",
  "version": "1.1.1",
  "description": "混沌弹窗组件",
  "main": "lib/index.js",
  "scripts": {
    "build": "rm -rf lib && rollup -c",
    "release": "npm run build && sh .publish.sh",
    "test": "jest",
    "lint": "eslint --ext .tsx,.ts,.js --fix ./src",
    "fix": "prettier --write  ./src"
  },
  "author": "zhangyu@hundun.cn",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/octopusrain/hundun-ui.git"
  },
  "keywords": [
    "hundun",
    "vue",
    "pullrefresh"
  ],
  "bugs": {
    "url": "https://github.com/octopusrain/hundun-ui.git/issues"
  },
  "homepage": "https://github.com/octopusrain/hundun-ui.git#readme",
  "peerDependencies": {
    "minirefresh": "2.0.2"
  },
  "devDependencies": {
    "@babel/core": "^7.10.4",
    "@babel/preset-env": "^7.10.4",
    "@vue/test-utils": "^1.0.3",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.1.0",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "^7.21.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-vue": "^7.7.0",
    "husky": "4",
    "jest": "^26.1.0",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-buble": "^0.19.8",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-postcss": "^3.1.2",
    "rollup-plugin-uglify": "^6.0.4",
    "rollup-plugin-vue": "^6.0.0",
    "vue": "^2.6.11",
    "vue-jest": "^4.0.1",
    "vue-template-compiler": "^2.6.11"
  },
  "dependencies": {
    "@babel/polyfill": "^7.8.7",
    "async-validator": "3.3.0",
    "minirefresh": "2.0.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "vue"
    ],
    "transform": {
      "^.+\\.js$": "babel-jest",
      ".*\\.(vue)$": "vue-jest"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*{.ts,.js,.vue}": [
      "eslint --ext .tsx,.ts,.js --fix ./src",
      "prettier --write",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
